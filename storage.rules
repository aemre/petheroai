rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User uploaded images - user can read/write their own files
    match /images/{imageFile} {
      allow read, write: if request.auth != null && 
        imageFile.matches('.*' + request.auth.uid + '_.*');
    }
    
    // Processed/generated images - user can read their own, only functions can write
    match /processed/{imageFile} {
      allow read: if request.auth != null && 
        imageFile.matches('.*' + request.auth.uid + '_.*');
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}