rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    // Cloud Functions can also write to user documents (for credit deduction)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth == null; // Allow Cloud Functions to write
    }
    
    // Users can read and write their own photos
    match /photos/{photoId} {
      allow read, write: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.userId);
    }
    
    // Users can read their own purchases
    match /purchases/{purchaseId} {
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      // Purchases are created by Cloud Functions only
      allow write: if false;
    }
    
    // Credit usage logs - readable by users, writable by Cloud Functions only
    match /creditUsage/{usageId} {
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow write: if request.auth == null; // Only Cloud Functions can write
    }
    
    // Users can read and write their own vaccine records
    match /vaccines/{vaccineId} {
      allow read, write: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.userId);
      // Also allow creation when resource is null (new documents)
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}